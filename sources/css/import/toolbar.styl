.toolbar	
	display: block
	height 54px
	background: #00438c
	line-height 56px
	text-align: center
	box-shadow 0 2px 3px rgba(0, 26, 66, 0.7)
	margin-bottom 8px
	background-image linear-gradient(to top, #012b77 0%, #005099 100%)
	position fixed
	top 0
	left 50%
	z-index 1000
	transform translateX(-50%)
	width 100%
	max-width 680px
	t transform
	.open &
		transform translateX(calc(50% - 56px))
	&__trigger
		position absolute
		padding 5px 16px
		height 100%
		top 0
		left 0
		svg
			path
				t all
		&--active
			svg
				transform scale(1.1)
				path
					&#p1
						transform-origin 100% 100%
						transform rotate(-45deg) translateY(-.5px)
					&#p3
						transform-origin 100% 100%
						transform rotate(45deg) translateY(1px) translateX(-1px)
					&#p2
						opacity: 0
	&__content
		position relative
		z-index: 2
	&:after
		content ""
		width 100%
		height 100%
		position absolute
		background url(/layout/images/toolbar.jpg) top center no-repeat
		background-size contain
		top 0
		left 0

.sidebar
	position fixed
	min-height 100%
	overflow scroll
	width 100%
	max-width: 680px
	z-index 1100
	t all
	transform translateX(-100%)
	opacity 0
	
	.open &
		transform translateX(0%)
		opacity 1
	&__trigger
		width 56px
		min-height 350px
		position fixed
		top 0
		right 0
		z-index 1000
	&__content
		width 80%
		width calc(100% - 56px)
		overflow scroll
		-webkit-overflow-scrolling: touch;
		background-image linear-gradient(to top, #142351 0%, #243D63 100%)
		top 0
		left 0
		height 100%
		position fixed
		z-index 1000
		box-shadow 0 2px 13px rgba(0, 0, 0, 0.59)

.profile
	width 100%
	background #001a51 url(/layout/images/profile.jpg) top left
	background-size cover
	min-height 190px
	text-align: center
	font-size 17px
	text-transform: uppercase
	padding-bottom 19px
	@media (min-width scr_sm)
		font-size 30px
		padding-bottom 30px
	a
		color white
		border-line alpha(white, .7)
	&__badge
		width 47px
		position absolute
		top -10px
		left -22px
		transition-delay .4s
		t all, .2s
		opacity 0
		transform scale(.5)
		@media (min-width scr_sm)
			width 94px
			top -20px
			left -40px
		.open &
			opacity 1
			transform scale(1)
	&__avatar
		display: inline-block
		position relative
		height 110px
		width 110px
		border 3px solid white
		margin-top 32px
		border-radius 50%
		background-size cover
		background-position center center
		margin-bottom 5px
		@media (min-width scr_sm)
			width 220px
			height 220px
			margin-top 50px
	
.nav
	&__item
		full-width()
		padding 0 15px
		height 45px
		line-height 47px
		border-top 1px solid #23426a
		border-bottom 1px solid #02203b
		color white
		font-size 17px
		font-weight: bold
		img
			margin-right 8px
			height 29px
			vertical-align: middle
			position relative
			top -1px
			@media (min-width scr_sm)
				height 58px
		@media (min-width scr_sm)
			font-size 32px
			height 86px
			line-height 91px
		&:hover
			color white
		&--active
			color #20c9fe
		&:last-of-type
			border-bottom 0
		&:first-of-type
			border-top 0